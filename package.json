{
  "name": "valtracker",
  "productName": "VALTracker",
  "version": "1.1.1",
  "description": "The only VALORANT Stats Tracker you'll ever need.",
  "author": "Spirit <dev@codedotspirit.dev>",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "publish": "nextron build --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "files": [
      "!README.md",
      "!.gitingore",
      "!./.github",
      "!./websocket_events.txt",
      "!./.vscode",
      "!./dist",
      "!./package-lock.json",
      "!./.git"
    ],
    "appId": "VALTracker",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icons/VALTracker_Logo_default.ico"
    },
    "nsis": {
      "installerIcon": "icons/VALTracker_Logo_default.ico",
      "uninstallerIcon": "icons/VALTracker_Logo_default.ico",
      "uninstallDisplayName": "VALTracker",
      "license": "license.txt",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "VALTracker",
        "repo": "DesktopClient"
      }
    ]
  },
  "repository": "https://github.com/VALTracker/DesktopClient",
  "license": "MIT",
  "dependencies": {
    "@nextui-org/react": "^1.0.0-beta.7",
    "compare-versions": "^4.1.4",
    "discord-rpc": "^4.0.1",
    "electron-fetch": "^1.7.4",
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.0.1",
    "electron-updater": "^5.0.1",
    "framer-motion": "^6.3.0",
    "moment": "^2.29.3",
    "node-fetch": "^3.2.3",
    "node-notifier": "^10.0.1",
    "react-awesome-slider": "^4.1.0",
    "showdown": "^2.1.0",
    "victory": "^36.5.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.5",
    "color": "^4.2.3",
    "electron": "^17.1.2",
    "electron-builder": "^22.5.1",
    "next": "^12.0.8",
    "nextron": "^8.1.0",
    "postcss": "^8.3.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^2.2.15",
    "tailwindcss-theme-swapper": "^0.5.1"
  }
}
